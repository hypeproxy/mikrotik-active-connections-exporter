<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <RootNamespace>HypeProxy.PrometheusExporter.MikrotikActiveConnections</RootNamespace>
        <AssemblyName>MikrotikActiveConnectionsExporter</AssemblyName>
        <LangVersion>default</LangVersion>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="ClintSharp" Version="1.1.1" />
      <PackageReference Include="MaxMind.GeoIP2" Version="5.2.0" />
      <PackageReference Include="Mikrotik.Net" Version="1.3.0" />
      <PackageReference Include="prometheus-net" Version="8.1.1" />
      <PackageReference Include="prometheus-net.AspNetCore" Version="8.0.1" />
      <PackageReference Include="tik4net" Version="3.5.0" />
    </ItemGroup>

    <ItemGroup>
      <None Update="GeoIP2-City.mmdb">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

</Project>
